#!/usr/bin/env bash

set \
  -o nounset \
  -o pipefail \
  -o errexit

# detect the tool name
readonly __dirname="$(cd -P "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
readonly toolname="$(basename "$(dirname "${__dirname}")")"

list_all () {
  local versions=""
  local version
  local v

  for v in $(curl -s "https://mirror.openshift.com/pub/openshift-v4/clients/${toolname}/" \
      | grep -o "v[0-9]\+\.[0-9]\+\.[0-9]\+\(\(-\|+\)[a-z]\+[0-9]*\)\?"); do
    version="${v#${toolname}_}"
    if [[ -z "${versions}" ]]; then
      versions="${version}"
    else
      versions="${version} ${versions}"
    fi
  done
  echo "${versions}"
}

list_all
